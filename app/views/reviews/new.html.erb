<div class="container py-3">
  <h1>Create new review for <%= @restaurant.name %></h1>
    <%= simple_form_for [@restaurant, @review] do |form| %>
      <%= form.input :content %>
      <%= form.input :rating %>
      <%= form.submit %>
    <% end %>

    <%= link_to "Back to restaurant", restaurant_path(@restaurant) %>
</div>
